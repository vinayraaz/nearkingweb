<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/cust_toolbar"
        layout="@layout/custom_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cust_toolbar"
        android:layout_marginBottom="50dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:scrollbars="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Billing Details"
                            android:textColor="@color/light_gray"
                            android:textSize="13sp"
                            android:textAllCaps="true"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/trans_gray"
                            android:layout_margin="5dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="30dp"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <EditText
                            android:id="@+id/billing_fname"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/editborder"
                            android:hint="First name"
                            android:inputType="text"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:padding="5dp" />
                        <EditText
                            android:id="@+id/billing_lname"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="@drawable/editborder"
                            android:hint="Last name"
                            android:inputType="text"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:padding="5dp" />
                    </LinearLayout>
                        <EditText
                            android:id="@+id/billing_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/editborder"
                            android:hint="Enter email"
                            android:inputType="textEmailAddress"
                            android:minHeight="30dp"
                            android:textSize="13sp"
                            android:padding="5dp" />
                        <EditText
                            android:id="@+id/billing_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/editborder"
                            android:hint="Enter mobile no."
                            android:inputType="number"
                            android:maxLength="10"
                            android:minHeight="30dp"
                            android:textSize="13sp"
                            android:padding="5dp" />

                        <EditText
                            android:id="@+id/billing_add1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/editborder"
                            android:hint="Enter Street address"
                            android:minHeight="30dp"
                            android:inputType="text"
                            android:textSize="13sp"
                            android:padding="5dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">
                            <EditText
                                android:id="@+id/billing_city"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:background="@drawable/editborder"
                                android:hint="Enter City"
                                android:inputType="text"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:padding="5dp" />
                            <EditText
                                android:id="@+id/billing_state"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:background="@drawable/editborder"
                                android:hint="Enter State"
                                android:inputType="text"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:padding="5dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">
                            <EditText
                                android:id="@+id/billing_pcode"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:background="@drawable/editborder"
                                android:hint="Enter Post Code"
                                android:inputType="number"
                                android:maxLength="6"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:padding="5dp" />
                            <EditText
                                android:id="@+id/billing_country"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="match_parent"
                                android:layout_margin="1dp"
                                android:background="@drawable/editborder"
                                android:hint="Enter Country"
                                android:inputType="text"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:padding="5dp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Product Details"
                            android:textColor="@color/light_gray"
                            android:textSize="13sp"
                            android:textAllCaps="true"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/trans_gray"
                            android:layout_margin="5dp"/>
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/rounded_corner_design"
                            app:cardCornerRadius="2dp"
                            app:cardElevation="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:minHeight="30dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center|right"
                                        android:text="Sub Total : " />

                                    <TextView
                                        android:id="@+id/subtotal"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center"
                                        android:text="" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:minHeight="30dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center|right"
                                        android:text="Delivery Charge :" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center"
                                        android:textColor="@color/green"
                                        android:text="Free" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:minHeight="30dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center|right"
                                        android:text="Tax :" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center"
                                        android:textColor="@color/green"
                                        android:text="0.00" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/trans_gray" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:minHeight="30dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center|right"
                                        android:text="Total Price :" />

                                    <TextView
                                        android:id="@+id/totalprice"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".5"
                                        android:gravity="center"
                                        android:text="" />
                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/placeorder"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>
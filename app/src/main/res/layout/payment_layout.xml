<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/cust_toolbar"
        layout="@layout/custom_toolbar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cust_toolbar"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="left"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Access Code"
                android:textStyle="bold"
                android:visibility="gone"/>
<!-- AVBB83GB36AP85BBPA -->
            <TextView
                android:id="@+id/accessCode"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_design"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="AVXK82FL45BU62KXUB"
                android:visibility="gone">

                <requestFocus />
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Merchant Id"
                android:textStyle="bold"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/merchantId"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corner_design"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="202591"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:text="Order Id"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_design"
                android:gravity="center|left"
                android:paddingLeft="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Currency"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currency"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_corner_design"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="INR" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="Amount"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_design"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:text="1.00" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Redirect Url"
                android:textStyle="bold"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/redirectUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textUri"
                android:visibility="gone"
                android:text="http://nearking.com/html/merchant/PHP/ccavResponseHandler.php"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Cancel Url"
                android:visibility="gone"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cancelUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textUri"
                android:visibility="gone"
                android:text="http://nearking.com/html/merchant/PHP/ccavResponseHandler.php"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="RSA Url"
                android:visibility="gone"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/rsaUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textUri"
                android:visibility="gone"
                android:text="http://nearking.com/html/merchant/PHP/GetRSA.php" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="3dp"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Pay"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>